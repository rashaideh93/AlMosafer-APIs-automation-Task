                        <configuration>

                            <testFailureIgnore>true</testFailureIgnore>

                            <suiteXmlFiles>
                                <suiteXmlFile>hotelsApiTests.xml</suiteXmlFile>
                            </suiteXmlFiles>

                        </configuration>

                    </plugin>
                </plugins>
            </build>

        </profile>
    </profiles>

