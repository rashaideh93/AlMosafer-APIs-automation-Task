                            <suiteXmlFiles>
                                <suiteXmlFile>flightsApiTests.xml</suiteXmlFile>
                            </suiteXmlFiles>

                        </configuration>

                    </plugin>
                </plugins>
            </build>

        </profile>

        <!-- Hotel API Tests Profile -->
